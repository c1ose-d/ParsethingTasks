<Window x:Class="UI.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="600" Height="400"
        Title="Add">
    <StackPanel>
        <TextBox x:Name="Title" Margin="16" TextWrapping="Wrap"/>
        <TextBox x:Name="Descriprion" Margin="16" TextWrapping="Wrap"/>
        <ComboBox x:Name="ComboBox" Margin="16" SelectionChanged="ComboBox_SelectionChanged"/>
        <ListView x:Name="Executors" Margin="16"/>
        <Button x:Name="Save" Margin="16" FontFamily="Segoe Fluent Icons" Content="&#xE74E;" Click="Save_Click"/>
    </StackPanel>
</Window>